{
  "build": {
    "target": ".",
    "tasks": [
      {
        "for": "hana",
        "src": "db",
        "options": {
          "model": [
            "db",
            "srv"
          ]
        }
      },
      {
        "for": "node-cf",
        "src": "srv",
        "options": {
          "model": [
            "db",
            "srv"
          ]
        }
      }
    ]
  },
  "requires": {
    "db": {
      "kind": "sqlite",
      "credentials": {
        "database": "invoice.db"
      }
    }
  },
  "hana": {
    "deploy-format": "hdbtable"
  },
  "odata": {
    "version": "v4"
  },
  "features": {
    "fetch_csrf": true,
    "serve_on_root": true
  }
}
