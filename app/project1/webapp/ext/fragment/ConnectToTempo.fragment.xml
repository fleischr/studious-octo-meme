<!-- filepath: webapp/ext/fragment/ConnectToDefactorButton.fragment.xml -->
<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
     <Dialog id="listDialog" title="Select network and digital wallet" 
            stretch="false"
            afterClose=".onDialogClose"
            core:require="{customAction: 'project1/ext/CustomActions'}">
        <VBox id="_IDGenVBox">
            <Label id="networkLabel" text="Select network:"/>
            <ComboBox id="networkComboBox" width="100%" selectedKey="11155111" selectionChange="customAction.onNetworkSelect">
                <items>
                    <core:Item id="_IDGenItemEthMain" key="1" text="Tempo Mainnet" />
                    <core:Item id="_IDGenItemEthTest" key="11155111" text="Tempo Testnet" />
                </items>
            </ComboBox>
            <Label id="walletLabel" text="Select wallet:"/>
            <List id="selectionList" 
                  mode="SingleSelectMaster" 
                  selectionChange="customAction.onWalletSelectionChange"
                  items="{/EnterpriseDigitalWallet}">
                  <StandardListItem id="_IDGenStandardListItem" title="{orgname}" description="{address}" />
            </List>
        </VBox>
        <endButton>
            <Button id="closeWalletSelect" text="Close" press="customAction.onWalletDialogClose" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>